<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="0.1dp"
    android:padding="5dp"
    card_view:cardBackgroundColor="@android:color/transparent"

    card_view:cardElevation="0.2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        >



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/grey"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="7dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_toEndOf="@id/img"
            android:layout_toRightOf="@id/img"
            android:text="Report"
            android:id="@+id/headLine"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headLine"
            android:layout_alignBaseline="@id/img"
            android:layout_toEndOf="@id/img"
            android:paddingTop="3dp"
            android:layout_toRightOf="@id/img"
            android:textSize="15sp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:text="Due Delivery: "
            android:id="@+id/deliver"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headLine"
            android:layout_alignBaseline="@id/img"
            android:layout_toEndOf="@id/deliver"
            android:layout_toRightOf="@id/deliver"
            android:paddingTop="3dp"
            android:textSize="15sp"
            android:text="There is an emergency at Ikorodu"
            android:id="@+id/details"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/headLine"
            android:layout_toEndOf="@id/headLine"
            android:id="@+id/rid"
            android:text="1"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>